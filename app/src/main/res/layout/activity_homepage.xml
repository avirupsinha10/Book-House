<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF1F1"
    tools:context=".homepage"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/pin"
                android:layout_width="70dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/pin" />

            <ImageView
                android:id="@+id/cart"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginStart="220dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/cart" />

            <ImageView
                android:id="@+id/userprof"
                android:layout_width="70dp"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/profile_user" />
        </LinearLayout>


        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="0dp"
            android:background="#ABEAE6"
            android:fontFamily="cursive"
            android:text="Book House"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="155dp"
            android:layout_height="194dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/coffee" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cofee Can Investing by Saurabh Mukherjea"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_gradient"
            android:text="INR 15/- per week"
            android:textColor="#F1E7E7"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="178dp"
            android:layout_height="189dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/dsalgo" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="DS and Algo Made Easy by Narasimha Karumanchi"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_gradient"
            android:text="INR 30/- per week"
            android:textColor="#F1E7E7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="More Loading..."
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>


